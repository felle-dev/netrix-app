<?xml version="1.0" encoding="utf-8"?>
<!-- android/app/src/main/res/drawable/widget_preview.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- Background -->
  <item>
    <shape android:shape="rectangle">
      <solid android:color="#FFFFFF" />
      <corners android:radius="16dp" />
      <stroke android:width="2dp" android:color="#6750A4" />
    </shape>
  </item>

  <!-- Icon overlay -->
  <item android:gravity="center" android:width="64dp" android:height="64dp">
    <shape android:shape="oval">
      <solid android:color="#F3EDF7" />
    </shape>
  </item>

  <!-- Inner circle -->
  <item android:gravity="center" android:width="48dp" android:height="48dp">
    <shape android:shape="oval">
      <solid android:color="#6750A4" />
    </shape>
  </item>
</layer-list>
